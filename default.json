{
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":renovatePrefix",
    ":label(dependencies)",
    ":separateMultipleMajorReleases",
    ":prImmediately",
    ":rebaseStalePrs",
    ":automergeDisabled"
  ],
  "minimumReleaseAge": "7 days",
  "prConcurrentLimit": 1,
  "packageRules": [
    {
      "description": "Docker: config",
      "matchCategories": ["docker"],
      "additionalBranchPrefix": "docker/",
      "addLabels": ["docker"]
    },
    {
      "description": "Docker: enforce image version granularity",
      "matchDatasources": ["docker"],
      "separateMultipleMajor": true,
      "separateMajorMinor": true,
      "separateMinorPatch": true
    },
    {
      "description": "GitHub Actions: config",
      "matchManagers": ["github-actions"],
      "additionalBranchPrefix": "github-actions/",
      "addLabels": ["github-actions"]
    },
    {
      "description": "GitHub Actions: all actions in one PR",
      "matchManagers": ["github-actions"],
      "groupName": "github actions",
      "groupSlug": "github-actions"
    },
    {
      "description": "Pre-commit: config",
      "matchManagers": ["pre-commit"],
      "additionalBranchPrefix": "pre-commit/",
      "addLabels": ["pre-commit"],
      "versioning": "loose"
    },
    {
      "description": "Python: config",
      "matchCategories": ["python"],
      "additionalBranchPrefix": "python/",
      "addLabels": ["python"]
    },
    {
      "description": "Python: all types-* and *-stubs dependencies in one PR",
      "matchCategories": ["python"],
      "matchPackageNames": ["types-*", "*-stubs"],
      "groupName": "types and stubs dependencies",
      "groupSlug": "types-and-stubs",
      "extends": ["schedule:weekly"]
    },
    {
      "description": "Makefile: config",
      "matchFileNames": ["Makefile"],
      "additionalBranchPrefix": "makefile/",
      "addLabels": ["makefile"]
    },
    {
      "description": "Monorepo: ruff dependencies",
      "matchSourceUrls": [
        "https://github.com/astral-sh/ruff",
        "https://github.com/astral-sh/ruff-pre-commit"
      ],
      "additionalBranchPrefix": "monorepo/",
      "groupName": "dependency ruff",
      "groupSlug": "ruff"
    },
    {
      "description": "Monorepo: yamllint dependencies",
      "matchSourceUrls": ["https://github.com/adrienverge/yamllint"],
      "additionalBranchPrefix": "monorepo/",
      "groupName": "dependency yamllint",
      "groupSlug": "yamllint"
    },
    {
      "description": "Monorepo: python Docker images",
      "matchDatasources": ["docker"],
      "matchDepNames": ["python"],
      "additionalBranchPrefix": "monorepo/",
      "groupName": "python docker tags",
      "groupSlug": "python"
    },
    {
      "description": "Monorepo: postgres Docker images",
      "matchDatasources": ["docker"],
      "matchDepNames": ["postgres", "postgis/postgis"],
      "additionalBranchPrefix": "monorepo/",
      "groupName": "postgres docker tags",
      "groupSlug": "postgres"
    },
    {
      "description": "Monorepo: redis Docker images",
      "matchDatasources": ["docker"],
      "matchDepNames": ["redis"],
      "additionalBranchPrefix": "monorepo/",
      "groupName": "redis docker tags",
      "groupSlug": "redis"
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:monthly"]
  }
}
